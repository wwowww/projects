{
  "name": "turborepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:my-app": "turbo dev --filter=my-app",
    "dev:hooks-app": "turbo dev --filter=hooks-app",
    "dev:chat-app": "turbo dev --filter=chat-app",
    "dev:todo-app": "turbo dev --filter=todo-app",
    "dev:chat-gpt-clone-app": "turbo dev --filter=chatgpt-clone-app",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
